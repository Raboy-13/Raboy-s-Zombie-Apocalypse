{
	"format_version": "1.10.0",
	"render_controllers": {
		"controller.render.drone_light": {
			"geometry": "geometry.default",
			"materials": [
				{
					"*": "material.lights"
				}
			],
			"textures": [
				"texture.light"
			],
			"part_visibility": [
				{
					"*": false
				},
				{
					"lights": true
				}
			],
			"uv_anim": {
				"offset": [
					0,
					"q.property('rza:active') == true ? math.mod(v.random + math.floor(query.life_time*5),7)/7 : 16"
				],
				"scale": [
					1,
					"0.047619047619047616"
				]
			},
			"is_hurt_color": {
				"r": 1,
				"g": 1,
				"b": 1,
				"a": "q.is_alive ? 0.3 : 0.1"
			}
		}
	}
}