{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "rza:lightning",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/turrets/storm_weaver/lightning"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "math.random_integer(10, 20)"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": 0.1,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.4, 8)"
			},
			"minecraft:particle_initial_speed": 20,
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 48
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.2, 0.2],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 128,
					"flipbook": {
