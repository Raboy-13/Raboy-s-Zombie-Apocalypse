{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.sonic_cannon.general": {
			"states": {
				"default": {
					"transitions": [
						{
							"firing": "v.attack_time > 0"
						}
					]
				},
				"firing": {
					"on_entry": [
						"/execute as @s[type=rza:sonic_cannon_attachment] run function world/turrets/sonic_cannon/attachment/sonicboom",
						"/execute as @s[type=rza:sonic_cannon] run function world/turrets/sonic_cannon/turret/sonicboom"
					],
					"transitions": [
						{
							"default": "v.attack_time <= 0"
						}
					]
				}
			}
		}
	}
}